@using PhoneBook_CloudComputing.Models
@{
    ViewBag.Title = "Edit contact details";
}

<div class="container bg-white mt-4 p-5 rounded">
    <h3>Edit contact details</h3>
    @{ Contact con = (Contact)ViewData["Contact"];}
    @using (Html.BeginForm("EditSubmit", "Contact", FormMethod.Post))
    {
        <input type="text" name="id" id="id" value="@con.Id" hidden />
        <p class="fw-bold">Name:</p>
        <input type="text" class="form-control" name="name" id="name" style="margin-bottom: 1rem;" value="@con.Name" required/>
        <p class="fw-bold">Company name:</p>
        <input type="text" class="form-control" name="companyName" id="companyName" style="margin-bottom: 1rem;" value="@con.CompanyName" required/>
        <p class="fw-bold">Email:</p>
        <input type="text" class="form-control" name="email" id="email" style="margin-bottom: 1rem;" value="@con.Email" required/>
        <p class="fw-bold">Phone number:</p>
        <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" style="margin-bottom: 1rem;" value="@con.PhoneNumber" required/>
        <p class="fw-bold">Address:</p>
        <input type="text" class="form-control" name="address" id="address" style="margin-bottom: 1rem;" value="@con.Address" required/>
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>

