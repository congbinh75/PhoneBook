@using PhoneBook_CloudComputing.Models
@{
	ViewBag.Title = "Edit account details";
}

<div class="container bg-white mt-4 p-5 rounded">
    <h3>Edit account details</h3>
    @using (Html.BeginForm("EditSubmit", "Account", FormMethod.Post))
    {
        Account acc = (Account)ViewData["Account"];
        Company com = (Company)ViewData["Company"];
        <p class="fw-bold">Name:</p>
        <input type="text" class="form-control" name="name" id="name" style="margin-bottom: 1rem;" value="@acc.Name" />
        if (acc.Role == 0)
        {
            <p class="fw-bold">Company name:</p>
            <input type="text" class="form-control" name="companyName" id="companyName" style="margin-bottom: 1rem;" value="@com.Name" />
        }
        <p class="fw-bold">Email:</p>
        <input type="text" class="form-control" name="email" id="email" style="margin-bottom: 1rem;" value="@acc.Email" />
        <p class="fw-bold">Email used for contact:</p>
        <input type="text" class="form-control" name="contactEmail" id="contactEmail" style="margin-bottom: 1rem;" value="@acc.ContactEmail" />
        <p class="fw-bold">Phone number used for contact:</p>
        <input type="text" class="form-control" name="contactPhone" id="contactPhone" style="margin-bottom: 1rem;" value="@acc.ContactPhoneNumber" />
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>

