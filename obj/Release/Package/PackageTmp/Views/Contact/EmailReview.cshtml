@using PhoneBook_CloudComputing.Models;
@{
    ViewBag.Title = "Review sent email";
}

<div class="container bg-white mt-4 p-5 rounded">
    <h3>Review sent email</h3>
    <div>
        @{
            List<Contact> list = ViewData["Contact"] as List<Contact>;
            <h3>Contact(s) to be sent</h3>
            <table class="table">
                <thead>
                    <tr>
                        <td class="fw-bold">Name</td>
                        <td class="fw-bold">Company Name</td>
                        <td class="fw-bold">Email</td>
                        <td class="fw-bold">Phone number</td>
                        <td class="fw-bold">Address</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Contact item in list)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.CompanyName
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.PhoneNumber
                                </td>
                                <td>
                                    @item.Address
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    </div>
    <div>
        <h3>Your email</h3>
        <label class="fw-bold">Subject</label>
        <p>@ViewData["Subject"].ToString()</p>
        <label class="fw-bold">Content</label>
        <p>@ViewData["Body"].ToString()</p>
    </div>
</div>

